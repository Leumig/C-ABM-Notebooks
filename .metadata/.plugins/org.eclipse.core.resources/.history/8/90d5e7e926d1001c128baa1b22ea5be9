#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

#include "Menu.h"

int menu()
{
	int todoOk = 0;
	int opcion;

	printf("  ***** MENU DE OPCIONES *****     \n\n");
	printf("Ingrese una opción del 1 al 6: \n\n");

	printf("1. ALTA EMPLEADO\n");
	printf("2. BAJA EMPLEADO\n");
	printf("3. MODIFICAR EMPLEADO\n");
	printf("4. ORDENAR \n");
	printf("5. LISTAR EMPLEADOS \n");
	printf("6. LISTAR EMPLEADOS MASCULINOS \n");
	printf("7. LISTAR EMPLEADOS FEMENINOS \n");
	printf("8. LISTAR EMPLEADOS MAYORES A UNA EDAD DETERMINADA \n");
	printf("9. INFORMAR PROMEDIO SUELDOS \n");
	printf("10. INFORMAR EMPLEADO DE MAYOR EDAD \n");
	printf("11. LISTAR SECTORES \n");
	printf("12. INFORMAR EMPLEADOS DE UN SECTOR \n");
	printf("13. INFORMAR EMPLEADOS POR SECTORES \n");
	printf("14. INFORMAR CANTIDAD DE EMPLEADOS POR SECTORES \n");
	printf("15. INFORMAR PROMEDIO DE SUELDOS POR SECTOR \n");
	printf("16. INFORMAR PROMEDIO DE SUELDOS DE UN SECTOR \n");
	printf("17. INFORMAR EMPLEADO/S CON MAYOR SUELDO DE UN SECTOR \n");
	printf("18. INFORMAR SECTOR CON MAYOR SUELDO TOTAL \n");
	printf("19. LISTAR POR ORDEN DE SECTOR Y LEGAJO \n\n");

	printf("20. SALIR \n\n");

	printf("Ingrese opción: ");
	fflush(stdin);
	todoOk = scanf("%d", &opcion);

	if(todoOk)
	{
		return opcion;
	}


	return todoOk;
}


void confirmarSalidaMenu(char* p)
{
	if(p != NULL)
	{
		char confirma;

		printf("¿Confirma la salida del programa? (si = 's'  no = 'n') \n");
		fflush(stdin);
		scanf("%c", &confirma);
		confirma = tolower(confirma);

		while(confirma != 's' && confirma != 'n')
		{
			printf("Error, debe responder con 's' o 'n':  \n");
			fflush(stdin);
			scanf("%c", &confirma);
			confirma = tolower(confirma);
		}
		*p = confirma;
	}
}










