#ifndef NOTEBOOK_H_
#define NOTEBOOK_H_

typedef struct
{
    int id;
    char modelo[20];
    float precio;
    int idMarca;
    int idTipo;
    int isEmpty;
} eNotebook;

#endif /* NOTEBOOK_H_ */

//Muestreo y lista
/// @brief Muestro una fila de datos de un pasajero.
///
/// @param e recibe una variable de eEmpleado para mostrar los datos
/// @param sectores recibe una variable de eSector para mostrar el sector
/// @param tam recibe el tamaño del array de eSector
/// @return devuelve 1 si funcionó, y sino, devuelve 0
int mostrarNotebook(eNotebook lista, eMarca marcas[], int tamMar, eTipo tipos[], int tamTip);

int listarNotebooks(eNotebook vec[], eMarca marcas[], int tamMar, eTipo tipos[], int tamTip);

//Inicializar
/// @brief Inicializa el array de empleados, colocando a todos
/// los 'isEmpty' en '1'.
///
/// @param list recibe el array de la estructura empleado
/// @param len recibe el tamaño del array
/// @return devuelve 1 si funcionó, y sino, devuelve 0
int inicializarNotebooks(eNotebook vec[], int tam);

//Alta
int buscarNotebookLibre(eNotebook vec[], int tam, int* pIndex);
int altaNotebook(eNotebook vec[], int tam, int* pLegajo, eMarca marcas[], int tamMar, eTipo tipos[], int tamTip);

//Baja
int buscarNotebook(eNotebook vec[], int tam,int legajo, int* pIndex);
int bajaNotebook(eNotebook vec[], int tam, eMarca marcas[], int tamMar, eTipo tipos[], int tamTip);

//Modificación
int modificarNotebook(eNotebook vec[], int tam, eMarca marcas[], int tamMar, eTipo tipos[], int tamTip);
int menuModificarNotebook();

//Hardcodeo
int hardcodearNotebooks(eNotebook vec[], int tam, int cant, int* pLegajo);
