#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define ASC 1
#define DESC 0

#define TAM 10
#define TAMM 4
#define TAMT 4


int main() {
	setbuf(stdout, NULL);


	char salir = 'n';
	int proximaId = 10000;

	eNotebook lista[TAM];
	eMarca marcas[TAMM] ={
		{1000, "Compaq"},
		{2001, "Asus"},
		{3002, "Acer"},
		{4003, "HP"},
	};
	eTipo tipos[TAMT] ={
		{5000, "Gamer"},
		{5001, "Disenio"},
		{5002, "Ultrabook"},
		{5003, "Normalita"},
	};

	inicializarNotebooks(lista, TAM);

	hardcodearEmpleados(lista, TAM, 5, &proximaId);

	do
	{
		switch(menu())
		{

		case 1:
			if(altaNotebook(lista, TAM, &proximaId, marcas, TAMM, tipos, TAMT))
			{
				printf("Empleado agregado con exito!!!\n");
			}
			else
			{
				printf("Problema al hacer el alta de empleado\n");
			}
			break;

		case 2:
			if(modificarEmpleado(lista, TAM, marcas, TAMM, tipos, TAMT) == 0)
			{
				printf("Problema al hacer la modificación de empleado\n");
			}

			break;

		case 3:
			if(bajaEmpleado(lista, TAM, marcas, TAMM, tipos, TAMT))
			{
				printf("Problema al hacer la baja de empleado\n");
			}
			break;

		case 4:

			break;

		case 5:
			listarEmpleados(lista, TAM, marcas, TAMM, tipos, TAMT);
			break;

		case 6:

			break;

		 case 7:

			break;

		 case 8:

			break;

		 case 9:

			break;

		default:
			printf("Opción inválida. Debe ingresar una opción del 1 al 20\n");
			break;
		}
		system("pause");

	}
	while(salir != 's');

	printf("Fin del programa");


	return 0;
}
